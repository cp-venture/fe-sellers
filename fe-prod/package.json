    "formik": "^2.1.4",
    "graphql": "~14.1.1",
    "graphql-request": "^1.8.2",
    "graphql-tag": "~2.10.1",
    "immutable": "^4.0.0-rc.12",
    "isomorphic-unfetch": "^3.0.0",
    "isomorphic-ws": "^4.0.1",
    "js-cookie": "~2.2.0",
    "keymirror": "~0.1.1",
    "localforage": "^1.7.4",
    "lodash": "~4.17.11",
    "mdi-material-ui": "~5.9.0",
    "mobile-detect": "^1.4.4",
    "next": "9.4.1",
    "next-compose-plugins": "^2.2.0",
    "next-cookies": "^2.0.3",
    "next-optimized-images": "^2.6.1",
    "passport": "~0.4.0",
    "passport-oauth2": "~1.4.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.1",
    "rc-collapse": "^2.0.0",
    "rc-drawer": "^4.0.1",
    "rc-table": "^7.7.2",
    "react": "^16.13.0",
    "react-container-query": "~0.11.0",
    "react-content-loader": "^5.0.4",
    "react-copy-to-clipboard": "^5.0.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.13.0",
    "react-dropzone": "^11.0.1",
    "react-helmet": "~5.2.0",
    "react-image": "^4.0.1",
    "react-intl": "^4.7.5",
    "react-multi-carousel": "^2.5.5",
    "react-reveal": "^1.2.2",
    "react-scroll": "^1.7.16",
    "react-select": "^3.1.0",
    "react-spring": "^8.0.27",
    "react-stickynode": "^3.0.3",
    "react-stripe-elements": "~2.0.3",
    "react-styled-flexboxgrid": "^3.2.1",
    "react-tag-autocomplete": "^6.1.0",
    "react-text-mask": "^5.4.3",
    "react-tracking": "~5.6.0",
    "react-virtualized": "^9.21.2",
    "react-waypoint": "^9.0.2",
    "reacto-form": "~1.4.0",
    "resize-observer-polyfill": "^1.5.1",
